@model BasketViewModel
@{
    ViewData["Title"] = "Basket";
    // https://www.bootdey.com/snippets/view/bs4-shop-cart
}

<h1>Basket</h1>

<div class="container pb-5 mb-2">
    <!-- Alert-->
    @if (TempData["message"] != null)
    {
        <div class="alert alert-info alert-dismissible fade show text-center mb-30">
            @TempData["message"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    @foreach (var basketItem in Model.Items)
    {
        <!-- Cart Item-->
        <div class="cart-item d-md-flex justify-content-between">
            <span class="remove-item"><i class="fa fa-times"></i></span>
            <div class="px-3 my-3">
                <a class="cart-item-product" href="#">
                    <div class="cart-item-product-thumb">
                        <img src="~/images/products/@basketItem.PhotoPath" alt="Product">
                    </div>
                    <div class="cart-item-product-info">
                        <h4 class="cart-item-product-title">@basketItem.ProductName</h4>
                        <span>@*description*@</span>
                    </div>
                </a>
            </div>
            <div class="px-3 my-3 text-center">
                <div class="cart-item-label">Quantity</div>
                <div class="count-input">
                    <input type="number" class="form-control" value="@basketItem.Quantity" />
                </div>
            </div>
            <div class="px-3 my-3 text-center">
                <div class="cart-item-label">Unit Price</div><span class="text-xl font-weight-medium">₺@basketItem.UnitPrice.ToString("N2")</span>
            </div>
            <div class="px-3 my-3 text-center">
                <div class="cart-item-label">Subtotal</div><span class="text-xl font-weight-medium">₺@basketItem.TotalPrice().ToString("N2")</span>
            </div>
        </div>
    }


    <!-- Coupon + Subtotal-->
    <div class="d-sm-flex justify-content-between align-items-center text-center text-sm-left">
        <div class="py-2"><span class="d-inline-block align-middle text-sm text-muted font-weight-medium text-uppercase mr-2">Total:</span><span class="d-inline-block align-middle text-xl font-weight-medium">@Model.Total().ToString("N2")</span></div>
    </div>
    <!-- Buttons-->
    <hr class="my-2">
    <div class="row pt-3 pb-5 mb-2">
        <div class="col-sm-6 mb-3"><a class="btn btn-style-1 btn-secondary btn-block" href="#"><i class="fe-icon-refresh-ccw"></i>&nbsp;Update Cart</a></div>
        <div class="col-sm-6 mb-3"><a class="btn btn-style-1 btn-primary btn-block" href="checkout-address.html"><i class="fe-icon-credit-card"></i>&nbsp;Checkout</a></div>
    </div>
</div>

